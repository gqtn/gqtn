# +---+ Main Key +---+
set $mod Mod4

# +---+ Font +---+
font pango: Ubuntu 14

# +---+ Input (teclado ABNT2) +---+
input * {
    xkb_layout br
    xkb_variant abnt2
}

# +---+ Display +---+
output HDMI-A-1 resolution 1920x1080 position 0,0
output eDP-1 resolution 1920x1200 position 0,1080 scale 1.25

# +---+ Keyboard +---+
input type:touchpad {
    tap enabled
    tap_button_map lrm
    natural_scroll enabled
    scroll_method two_finger
}

# +---+ Waybar +---+

bar {
    swaybar_command waybar
}

# +---+ Startup +---+
exec dex --autostart --environment sway
exec /usr/libexec/polkit-gnome-authentication-agent-1
exec nm-applet
exec $HOME/.config/sway/audio.sh
exec mako
exec xdg-desktop-portal-wlr
exec xdg-desktop-portal
exec brightnessctl set 1000
exec insync start &

# OBS: os seguintes comandos do X11 não funcionam sob Wayland:
# - setxkbmap (substituído pela seção input acima)
# - xss-lock, xset, picom, xrdb, feh, polybar
# Comentei abaixo, mantenha apenas se estiver usando Xwayland apps
# exec --no-startup-id xss-lock --transfer-sleep lock -- /usr/bin/v3lock
# exec --no-startup-id picom
# exec --no-startup-id xset s off -dpms
# exec --no-startup-id xrdb -merge $HOME/.Xresources
# exec --no-startup-id polybar
# exec --no-startup-id feh --bg-scale $HOME/.config/i3/default.png

# Substitua feh por swaybg (Wayland)
exec swaybg -i $HOME/.config/sway/default.png -m fill

# +---+ Windows +---+
for_window [app_id="crx_nngceckbapebfimnlniiiahkandclblb"] floating enable, resize 600 200

# +---+ General Configuration +---+
gaps inner 5
gaps outer 10
default_border pixel 1
default_floating_border pixel 1
title_align center

# +---+ Keys Control +---+
bindsym $mod+Return exec alacritty
bindsym $mod+q kill
bindsym $mod+d exec rofi -show drun
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym Ctrl+$mod+l exec $HOME/.config/sway/v3lock
bindsym $mod+Shift+q exec "swaynag -t warning -m 'Do you really want to exit Sway?' -B 'Yes, exit' 'swaymsg exit'"

# +---+ Layouts +---+
bindsym $mod+e layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+s layout toggle split
bindsym $mod+f floating toggle
bindsym $mod+a split toggle
bindsym $mod+F11 fullscreen toggle
bindsym $mod+Tab workspace back_and_forth
floating_modifier $mod

# +---+ Windows Focused +---+
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# +---+ Windows Moving +---+
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# +---+ Workspaces +---+
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# +---+ Switch Workspaces +---+
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# +---+ Move Focused Container to Workspace +---+
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# +---+ Resize Mode +---+
mode "resize" {
    bindsym h resize shrink width 30px
    bindsym j resize grow height 30px
    bindsym k resize shrink height 30px
    bindsym l resize grow width 30px
    bindsym Left resize shrink width 30px
    bindsym Down resize grow height 30px
    bindsym Up resize shrink height 30px
    bindsym Right resize grow width 30px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# +---+ Screenshots +---+
bindsym Print exec grim "$HOME/Pictures/$(date '+%H:%M-%d.%m.%y').png"
bindsym $mod+Print exec grim -g "$(swaymsg -t get_tree | jq -r '.. | select(.focused? == true).rect | "\(.x),\(.y) \(.width)x\(.height)"')" "$HOME/Pictures/$(date '+%H:%M-%d.%m.%y').png"
bindsym Shift+Print exec grim -g "$(slurp)" "$HOME/Pictures/$(date '+%H:%M-%d.%m.%y').png"

# +---+ Clipboard +---+
bindsym Ctrl+Print exec grim - | wl-copy -t image/png
bindsym Ctrl+$mod+Print exec grim -g "$(swaymsg -t get_tree | jq -r '.. | select(.focused? == true).rect | "\(.x),\(.y) \(.width)x\(.height)"')" - | wl-copy -t image/png
bindsym Ctrl+Shift+Print exec grim -g "$(slurp)" - | wl-copy -t image/png


# +---+ Volume +---+
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# +---+ Brilho +---+
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

# +---+ Colors +---+
set $darkbluetrans	#08052b
set $darkblue		#08052b
set $lightblue		#5294e2
set $urgentred		#e53935
set $white		#ffffff
set $black		#000000
set $purple		#e345ff
set $darkgrey		#383c4a
set $grey		#b0b5bd
set $mediumgrey		#8b8b8b
set $yellowbrown	#e1b700

# +---+ Window colors +---+
client.focused          $grey   $darkgrey   $white   $grey   $grey
client.unfocused        $darkgrey $darkgrey $grey    $darkgrey $darkgrey
client.focused_inactive $darkgrey $darkgrey $grey    $darkgrey $darkgrey
client.urgent           $urgentred $urgentred $white $urgentred $urgentred

